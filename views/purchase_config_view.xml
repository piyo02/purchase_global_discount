<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_setting_discount_global">
            <field name="name">discount.global.settings.form</field>
            <field name="model">discount.global.settings</field>
            <field name="arch" type="xml">
                <form string="Discount Global">
                    <group string="General information">
                        <group>
                            <field name="discount_product_id" class="oe_inline"/>
                        </group>
                        <group>
                            <field name="account_payable_id" class="oe_inline"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="action_form_setting_discount_global" model="ir.actions.act_window">
            <field name="name">Setting Discount</field>
            <field name="res_model">discount.global.settings</field>
            <field name="view_mode">form</field>
        </record>
        
        <menuitem id="main_manu_setting_discount"
            parent="account.menu_finance"
            action="action_form_setting_discount_global" 
            name="Setting Discount"
            sequence="10"/>

    </data>
</odoo>