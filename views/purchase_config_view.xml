<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_purchase_configuration_inherit">
            <field name="name">purchase.config.settings.form</field>
            <field name="model">purchase.config.settings</field>
            <field name="inherit_id" ref="purchase.view_purchase_configuration"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form" position="inside">
                        <group>
                            <field name="discount_product_id" class="oe_inline"/>
                        </group>
                        <group>
                            <field name="account_payable_id" class="oe_inline"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
		
    </data>
</odoo>